<?xml version="1.0"?><!--/** * Indexa + Conversão Module * * @title      Magento -> + Conversão Module * @category   Payment Gateway * @package    Indexa_Mc * @author     Indexa Team -> desenvolvimento [at] indexainternet [dot] com [dot] br * @license    http://opensource.org/licenses/osl-3.0.php  Open Software License (OSL 3.0) * @copyright  Copyright (c) 2011 Indexa - http://www.indexainternet.com.br */--><config>    <modules>        <Indexa_Mc>            <version>0.1.0</version>        </Indexa_Mc>    </modules>    <global>        <models>            <indexa_mc>                <class>Indexa_Mc_Model</class>                <resourceModel>indexa_mc_resource</resourceModel>            </indexa_mc>            <indexa_mc_resource>                <class>Indexa_Mc_Model_Resource</class>                <entities>                    <payment>                        <table>indexa_payment_orders</table>                    </payment>                    <log>                        <table>indexa_robots_logs</table>                    </log>                </entities>            </indexa_mc_resource>        </models>        <resources>            <indexa_mc_setup>                <setup>                    <module>Indexa_Mc</module>                    <class>Indexa_Mc_Model_Resource_Setup</class>                </setup>                <connection>                    <use>core_setup</use>                </connection>            </indexa_mc_setup>            <indexa_mc_write>                <connection>                    <use>core_write</use>                </connection>            </indexa_mc_write>            <indexa_mc_read>                <connection>                    <use>core_read</use>                </connection>            </indexa_mc_read>        </resources>        <blocks>            <indexa_mc>                <class>Indexa_Mc_Block</class>            </indexa_mc>        </blocks><!--        <events>            <checkout_submit_all_after>                <observers>                    <indexa_mc_checkout_submit_all_after>                        <type>singleton</type>                        <class>Indexa_Mc_Model_Observer</class>                        <method>salesOrderSave</method>                    </indexa_mc_checkout_submit_all_after>                </observers>            </checkout_submit_all_after>        </events>-->    </global>        <adminhtml>        <events>           <core_block_abstract_to_html_after>                <observers>                    <indexa_mc_order_view_block>                        <type>singleton</type>                        <class>indexa_mc/observer</class>                        <method>salesOrderMcBlock</method>                    </indexa_mc_order_view_block>                </observers>            </core_block_abstract_to_html_after>        </events>    </adminhtml>    <default>        <indexa>            <indexa_mc>                <active>1</active>                <model>Indexa_Mc_Model_Mc</model>                <title>Indexa + Conversão</title>                <qtd_tentativas>3</qtd_tentativas>                <grava_log>1</grava_log>            </indexa_mc>        </indexa>    </default>    <crontab>        <jobs>            <indexa_mc_payment_authorize>                <schedule>                    <cron_expr>*/5 * * * *</cron_expr>                </schedule>                <run>                    <model>indexa_mc/mc::authorize</model>                </run>            </indexa_mc_payment_authorize>           <indexa_mc_payment_capture_cc>                <schedule>                    <cron_expr>*/10 * * * *</cron_expr>                </schedule>                <run>                    <model>indexa_mc/mc::captureCc</model>                </run>            </indexa_mc_payment_capture_cc>             <indexa_mc_payment_capture_boleto>                <schedule>                    <cron_expr>0 8,18 * * *</cron_expr>                </schedule>                <run>                    <model>indexa_mc/mc::captureBoleto</model>                </run>            </indexa_mc_payment_capture_boleto>            <indexa_mc_clearabandonedcart>                <schedule>                    <cron_expr>0 * * * *</cron_expr>                </schedule>                <run>                    <model>indexa_mc/mc::abandonedCart</model>                </run>            </indexa_mc_clearabandonedcart>        </jobs>    </crontab></config>