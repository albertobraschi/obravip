        	if (document.cookie.match(regex)){
			return false;		
  		}else{
			var maskHeight = document.body.clientHeight;	
			var maskWidth = document.body.clientWidth;
			$('newsletters_fundo').setStyle({width:maskWidth+'px', height:maskHeight+'px'});
			$('newsletters_fundo').setStyle({display:'block'});
			var formMargin = ($('newsletters_show').getWidth())/2;
			$('newsletters_show').setStyle({margin:'200px 0 0 '+ ((maskWidth/2)-formMargin) +'px' ,display:'block'});
			document.cookie = "visited=" + true+";";		
		}
		
	};
	function close(){
		$('newsletters_fundo').setStyle({display:'none'});
		$('newsletters_show').setStyle({display:'none'});
			
	}
	


	
</script>
